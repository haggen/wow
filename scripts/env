#!/usr/bin/env bash

set -eo pipefail

export TAG="${GITHUB_REF#refs/tags/}"
export TARGET="${TAG%/*}"

if test "$TARGET" != "$GITHUB_REF"; then
	platform="${TARGET%/*}"
	name="${TARGET#*/}"
	version="${TAG#$TARGET/}"

	export RELEASE="$name $version ($platform)"
	export ARCHIVE="$name-$version-$platform"
fi
